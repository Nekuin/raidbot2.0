{
  "compilerOptions": {            
    "target": "es5",                                                
    "module": "CommonJS",              
    "outDir": "./build",                              
    "rootDir": "./",                            
    "strict": true,                                     
    "moduleResolution": "node",
    "esModuleInterop": true,                        
    "skipLibCheck": true,                          
    "forceConsistentCasingInFileNames": true        
  }
}
